import java.io.BufferedReader;
import java.io.InputStreamReader;

public class segunda_parte {

	public static void main(String[] args) {
		
		double radio;
		radio = Double.valueOf(entrada.readLine());
		final double numeroPi = 3.14159265358979323846;
		double perimetroCirculo = 2 * numeroPi * radio;
		
		System.out.println("Vamos a dibujar un círculo!! Para eso necesitamos que nos proponga un valor para su radio" + perimetroCirculo);
		
		try{
			BufferedReader entrada = new BufferedReader (new InputStreamReader(System.in));
			System.out.println("Por favor, ingrese un valor para el radio del círculo que quiera dibujar: ");
			
			System.out.println("El radio ingresado es: " + radio);
	
			System.out.println("Por lo tanto el perímetro de su círculo es = " + perimetroCirculo);
		}
		
		catch (Exception exc){
			
		}
		
		
		
		//tengo que pedirle al usuario un radio
		//la maquina tiene que hacer 2.pi.radio
		// variable del radio, variable fija pi, variable de la cuenta
		//tiene que mostrar el resultado
		

	}

}
